<Alloy>
	<Window class="container" tabBarHidden="true">
	
      <ScrollView id="scrollView" showHorizontalScrollIndicator="false" showVerticalScrollIndicator="true" layout="vertical">
          
          <View class="beerImageContainer">
          	<ImageView id="image" class="beerImage" image="defaultBeerImage.png" defaultImage="defaultImageGrey.png"></ImageView>
          </View>
          
          <Label id="name"></Label>
          
          <Label id="brewery"></Label>

          <Label id="style" />

          <Widget src="infopills" id="infopills" />
          
          <Label id="notes"></Label>
          
          <View id="spacer"></View>
          
      </ScrollView>

   </Window>
</Alloy>